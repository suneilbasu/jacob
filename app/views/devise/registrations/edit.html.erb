<div class="authform">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div id=left_col >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <table class="table_edit" >
    <tbody>
      <tr>
        <td><b>First name:</b></td>
        <td><%=f.text_field :first_name, :autocomplete => 'off' %></td>
      </tr>
      <tr>
        <td><b>Last name:</b></td>
        <td><%=f.text_field :last_name, :autocomplete => 'off' %></td>
      </tr>
      <tr>
        <td><b>Office location:</b></td>
        <td><%=f.text_field :office_location, :autocomplete => 'off' %></td>
      </tr>
      <tr>
        <td><b>Your current password:</b><br><i>(we need your current password <br>to confirm your changes)</i></td>
        <td><%= f.password_field :current_password, autocomplete: "off" %></td>
      </tr>
      <tr>
        <td></td>
        <td style="text-align:right"><%=f.submit "Change" %></td>
           <br>
  </table>
<%= link_to "Back", :back %>
</div>

<div id=right_col >
<table class="table_edit" >
 <b><h3>Change Password Settings</h3></b>

 <tr>
   <td><b>New password:</b></td>
   <td><%= f.password_field :password, autocomplete: "off" %></td>
 </tr>
 <tr>
   <td><b>New password confirmation:</b></td>
   <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
 </tr>
 <tr>
   <td><b>Your current password:</b></td>
   <td><%= f.password_field :current_password, autocomplete: "off" %></td>
 </tr>
 <tr>
   <td></td>
   <td style="text-align:right"><%=f.submit "Change Password" %></td>
  </div>
<% end %>
</table>
<% if current_user.admin? %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete_user %></p>
<% end %>

</div>
</div>
