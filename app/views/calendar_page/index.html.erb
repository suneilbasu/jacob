<% if current_user.admin? %>
<h1> Device Calendar </h1>
<% else %>
<h1>My Replacement Calendar </h1>
<% end %>
<div id="calendar">
	<h2 id="month">
		<%= link_to "<", date: @date.prev_month %>
		<%= @date.strftime("%B %Y")%>
		<%= link_to ">", date: @date.next_month %></h2>
		<%= calendar @date do |date| %>
		<%= date.day %>
		<% if @devices_by_date[date] %>
			<ul>
				<% @devices_by_date[date].each do |device| %>
				<li><%= link_to device.device_name, device %></li>
			<% end %>
		</ul>
	<% end %>
	<% end %>
</div>
